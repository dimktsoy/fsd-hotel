mixin btn(props = {})
  //- mods: primary, outline, link, block, focus

  -
    const { 
      mods = '',
      text = 'Button',
      isInput = false,
      isIcon = false
    } = props;

    let allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
      allMods = mods.split(',').map(el => `btn--${el.trim()}`).join(' ');
    }

  if (attributes.href)
    a.btn(class=allMods)&attributes(attributes)!= text
      if (isIcon)
        img.btn__arrow(src=require('../components/btn/images/btn-arrow.svg'), alt="arrow", width="18", height="18")
      block
  else if (isInput)
    input.btn(class=allMods, value=text, type="button")&attributes(attributes)
  else
    button.btn(class=allMods, type="button")&attributes(attributes)!= text
      if (isIcon)
        img.btn__arrow(src=require('../components/btn/images/btn-arrow.svg'), alt="arrow", width="18", height="18")
      block
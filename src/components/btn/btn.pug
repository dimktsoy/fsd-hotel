mixin btn(props = {})
  -
    const { 
      text = 'Кнопка',
      attrs,
      isPrimary = false,
      isOutline = false,
      isSimple = false,
      isSizeFull = false,
      isWithIcon = false,
      isHover = false,
      isLink = false
    } = props;

    let btnClassName = 'btn';
    btnClassName += isPrimary ? ' btn--theme-primary' : '';
    btnClassName += isOutline ? ' btn--theme-outline' : '';
    btnClassName += isSimple ? ' btn--theme-simple' : '';
    btnClassName += isSizeFull ? ' btn--size-full' : '';
    btnClassName += isHover ? ' btn--view-hovered' : '';

  if (isLink)
    a(class=btnClassName, href="#")&attributes(attrs || attributes)!= text
      if (isWithIcon)
        img.btn__arrow(src=require('../../components/btn/img/btn-arrow.svg'), alt="arrow", width="18", height="18")
      block
  else
    button(class=btnClassName, type="button")&attributes(attrs || attributes)!= text
      if (isWithIcon)
        img.btn__arrow(src=require('../../components/btn/img/btn-arrow.svg'), alt="arrow", width="18", height="18")
      block
include ../date-dropdown/date-dropdown
include ../dropdown/dropdown
include ../btn/btn

mixin form-order(props = {})
  -
    const {
      title = {
        symbol: '&#8470',
        number: '888',
        text: 'люкс'
      },
      cost = {
        value: '9 990&#8381;',
        text: 'в сутки'
      },
      dateDropdown = {
        titleStart: 'Прибытие',
        titleEnd: 'Выезд',
        attrs: {
          placeholder: 'дд.мм.гггг'
        }
      },
      dropdown = {
        title: 'Гости',
        placeholder: 'Сколько гостей',
        isButtons: true,
        options: [
          {
            title: 'взрослые',
            value: 2
          },
          {
            title: 'дети',
            value: 1
          },
          {
            title: 'младенцы',
            value: 0,
            isBaby: true
          }
        ]
      },
      costList = [
        {
          description: '9 990&#8381; x 4 суток',
          cost: '39 960&#8381;'
        },
        {
          description: 'Сбор за услуги: скидка 2 179&#8381;',
          cost: '0&#8381;',
          isIcon: true
        },
        {
          description: 'Сбор за дополнительные услуги',
          cost: '300&#8381;',
          isIcon: true
        }
      ],
      totalCost = {
        text: 'Итого',
        value: '38 081&#8381;'
      },
      btnSubmit = {
        text: 'Забронировать',
        isPrimary: true,
        isSizeFull: true,
        isWithIcon: true,
        attrs: {
          type: 'submit'
        }
      }
    } = props;
  
  .form-order&attributes(attributes)
    form.form-order__form
      .form-order__heading
        h3.form-order__title
          span.form-order__title-symbol!= title.symbol
          span.form-order__title-number!= title.number
          span.form-order__title-text!= title.text
        .form-order__cost
          strong!= cost.value
          | 
          != cost.text
      .form-order__input-group
        +date-dropdown(dateDropdown)
      .form-order__input-group
        +dropdown(dropdown)
      ul.form-order__cost-list
        each item in costList
          -
            const {
              description,
              cost,
              isIcon = false
            } = item;

            let classes = 'form-order__cost-list-left';
            classes += isIcon ? ' form-order__cost-list-left--icon' : '';

          li.form-order__cost-list-item
            span(class=classes)!= description
            span.form-order__cost-list-right!= cost
      .form-order__cost-total
        span.form-order__cost-total-left!= totalCost.text
        span.form-order__cost-total-right!= totalCost.value
      .form-order__footer
        +btn(btnSubmit)
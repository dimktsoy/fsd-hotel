mixin pagination(props = {})
  -
    const {
      mods = '',
      title = '',
      text = ''
    } = props;

  .pagination(aria-label="Page navigation")&attributes(attributes)
    .pagination__inner
      if (title)
        .pagination__title!= title
      ul.pagination__list
        li.pagination__item
          a.pagination__link.pagination__link--active(href="#") 1
        li.pagination__item
          a.pagination__link(href="#") 2
        li.pagination__item
          a.pagination__link(href="#") 3
        li.pagination__item
          span.pagination__more ...
        li.pagination__item
          a.pagination__link(href="#") 15
        li.pagination__item
          a.pagination__link.pagination__link--next(href="#")
            img.pagination__icon(src=require("../../components/pagination/img/pagination-arrow.svg"), alt="next")
      if (text)
        p.pagination__text!= text
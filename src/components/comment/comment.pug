include ../like-btn/like-btn

mixin comment(props = {})
  -
    const { 
      username = 'Имя пользователя',
      text = 'Великолепный матрас на кровати в основной спальне!',
      avatar = 'comment-noavatar.gif',
      date = 'сегодня',
      likeBtn = { count: 0 }
    } = props;

  .comment&attributes(attributes)
    .comment__user-avatar-wrap
      img.comment__user-avatar(src=require(`../../components/comment/img/${avatar}`), alt="avatar", width="48", height="48")
      span.comment__like-btn
        +like-btn(likeBtn)
    .comment__body
      span.comment__user-name!= username
      span.comment__date!= date
      .comment__text!= text
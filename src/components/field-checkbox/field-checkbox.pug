mixin field-checkbox({ mods = '', title = '', checkboxes = [] })

  //- Available mods: rich

  //- Use:
    +field-checkbox({
      mods: '',
      title: 'Title',
      checkboxes: [
        {
          title: 'Title 1',
          text: '',
          attrs: {
            name: ''
          }
        },
        {
          title: 'Title 2',
          text: '',
          attrs: {
            name: ''
          }
        }
      ]
    })

  -
    let allMods = '';
    if (typeof(mods) !== 'undefined' && mods) {
      allMods = mods.split(',').map(el => `field-checkbox--${el.trim()}`).join(' ');
    }

  .field-checkbox(class=allMods)&attributes(attributes)
    if (typeof(title) !== 'undefined' && title)
      .field-checkbox__title!= title
    each checkbox in checkboxes
      -
        const { mods = '', title = '', text = '', attrs = {} } = checkbox;
        let allMods = '';
        if (typeof(mods) !== 'undefined' && mods) {
          allMods = mods.split(',').map(el => `field-checkbox__input-wrap--${el.trim()}`).join(' ');
        }
      .field-checkbox__input-wrap(class=allMods)
        label.field-checkbox__label
          input.field-checkbox__input(type='checkbox')&attributes(attrs)
          span.field-checkbox__text!= title
          if (typeof(text) !== 'undefined' && text)
            span.field-checkbox__add-text!= text
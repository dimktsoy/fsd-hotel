extends ../../templates/layout

include ../../components/logo/logo
include ../../components/field-text/field-text
include ../../components/subscribe/subscribe
include ../../components/dropdown/dropdown
include ../../components/field-checkbox/field-checkbox
include ../../components/field-radio/field-radio
include ../../components/toggle/toggle
include ../../components/range-slider/range-slider
include ../../components/btn/btn
include ../../components/pagination/pagination
include ../../components/icon-text-list/icon-text-list
include ../../components/bullet-list/bullet-list
include ../../components/expand/expand
include ../../components/like-btn/like-btn
include ../../components/rating/rating
include ../../components/comment/comment
include ../../components/date-dropdown/date-dropdown

block head
  - const pageTitle = "Form Elements";
  - const pageDescription = "Макет страниц по поиску номеров в отеле";
  - const pageKeywords = "Toxin, отель, отели";

block content

  body.page-form-elements

    .page-form-elements__header
      +logo({ 
        isSimple: true,
        href: 'index.html'
      })

    .page-form-elements__grid
      .page-form-elements__item.page-form-elements__item--left
        .page-form-elements__field-text-default
          +field-text({
            title: 'Text Field',
            helpText: 'Default',
            attrs: {
              type: 'email',
              placeholder: 'Email'
            }
          })
        .page-form-elements__field-text-hover
          +field-text({
            title: 'Text field',
            helpText: 'Hover / Focus',
            isHovered: 'hovered',
            attrs: {
              value: 'This is pretty awesome'
            }
          })
        .page-form-elements__dropdown-default
          +dropdown({
            title: 'Dropdown',
            placeholder: 'Сколько гостей',
            helpText: 'Expanded',
            isButtons: true,
            options: [
              {
                title: 'взрослые',
                value: 0
              },
              {
                title: 'дети',
                value: 0
              },
              {
                title: 'младенцы',
                value: 0,
                isBaby: true
              }
            ]
          })
        .page-form-elements__field-text-masked
          +field-text({
            title: 'Masked text field',
            helpText: 'Default',
            isMask: true,
            attrs: {
              placeholder: 'ДД.ММ.ГГГГ',
              'data-inputmask': "'placeholder': 'ДД.ММ.ГГГГ', 'alias': 'datetime', 'inputFormat': 'dd.mm.yyyy'"
            }
          })
        .page-form-elements__date-dropdown
          +date-dropdown({
            titleStart: 'Date dropdown',
            titleEnd: 'Date dropdown',
            attrs: {
              placeholder: 'дд.мм.гггг'
            }
          })
        .page-form-elements__filter-date-dropdown
          +date-dropdown({
            isFilter: true,
            titleFilter: 'Filter date dropdown',
            attrs: {
              placeholder: 'дд мм - дд мм',
              value: '19 авг - 23 авг'
            }
          })
        .page-form-elements__subscribe
          h3.page-form-elements__subscribe-title Subscription text field
          +subscribe({
            attrs: {
              placeholder: 'Email',
              type: 'email'
            }
          })
      .page-form-elements__item
        .page-form-elements__checkbox-buttons
          +field-checkbox({
            title: 'Checkbox Buttons',
            checkboxes: [
              {
                title: 'Можно курить'
              },
              {
                title: 'Можно с питомцами',
                attrs: {
                  checked: true
                }
              },
              {
                title: 'Можно пригласить гостей<br>(до 10 человек)',
                attrs: {
                  checked: true
                }
              }
            ]
          })
        .page-form-elements__radio-buttons
          +field-radio({
            title: 'Radio Buttons',
            radiobuttons: [
              {
                title: 'Мужчина',
                attrs: {
                  name: 'radio',
                  checked: true
                }
              },
              {
                title: 'Женщина',
                attrs: {
                  name: 'radio'
                }
              }
            ]
          })
        .page-form-elements__toggle
          +toggle({
            title: 'Toggle',
            items: [
              {
                title: 'Получать спецпредложения',
                attrs: {
                  checked: true
                }
              },
              {
                title: 'Получать спецпредложения'
              }
            ]
          })
        h3.page-form-elements__title Like button
        .page-form-elements__like-btn
          +like-btn({
            count: 2
          })
          +like-btn({
            isActive: true,
            count: 12
          })
        h3.page-form-elements__title Rate button
        .page-form-elements__rating
          +rating({
            id: 'rating-1',
            currentStars: 4,
            isStatic: false
          })
          +rating({
            currentStars: 5
          })
      .page-form-elements__item
        .page-form-elements__range-slider
          +range-slider({
            title: 'Range slider',
          })
        .page-form-elements__buttons
          h3.page-form-elements__buttons-title Buttons
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isPrimary: true
            })
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isPrimary: true,
              isHover: true
            })
        .page-form-elements__buttons.page-form-elements__buttons--outline
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isOutline: true
            })
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isOutline: true,
              isHover: true
            })
        .page-form-elements__buttons.page-form-elements__buttons--link
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isSimple: true,
              attrs: {
                href: '/mock-adress/change-me'
              }
            })
          .page-form-elements__buttons-item
            +btn({
              text: 'Click me',
              isSimple: true,
              isHover: true,
              attrs: {
                href: '/mock-adress/change-me'
              }
            })
        .page-form-elements__buttons.page-form-elements__buttons--full
          +btn({
            text: 'Перейти к оплате',
            isPrimary: true,
            isSizeFull: true,
            isViewArrow: true
          })
        .page-form-elements__pagination
          h3.page-form-elements__pagination-title Pagination
          +pagination({
            text: '1 – 12 из 100+ вариантов аренды'
          })
      .page-form-elements__item.page-form-elements__item--dropdown
        .page-form-elements__dropdown-column
          .page-form-elements__dropdown
            +dropdown({
              title: 'Dropdown',
              placeholder: 'Выбрать',
              helpText: 'Default',
              isDetails: true,
              options: [
                {
                  title: 'спальни',
                  value: 2,
                  data: ['спальня', 'спальни', 'спален'],
                },
                {
                  title: 'кровати',
                  value: 2,
                  data: ['кровать', 'кровати', 'кроватей'],
                },
                {
                  title: 'ванные комнаты',
                  value: 0,
                  data: ['ванная комната', 'ванные комнаты', 'ванных комнат'],
                }
              ]
            })
          .page-form-elements__dropdown
            +dropdown({
              title: 'Dropdown',
              placeholder: 'Выбрать',
              helpText: 'Expanded',
              isDetails: true,
              isOpen: true,
              options: [
                {
                  title: 'спальни',
                  value: 2,
                  data: ['спальня', 'спальни', 'спален'],
                },
                {
                  title: 'кровати',
                  value: 2,
                  data: ['кровать', 'кровати', 'кроватей'],
                },
                {
                  title: 'ванные комнаты',
                  value: 0,
                  data: ['ванная комната', 'ванные комнаты', 'ванных комнат'],
                }
              ]
            })
        .page-form-elements__dropdown-column
          +dropdown({
            title: 'Dropdown',
            placeholder: 'Сколько гостей',
            helpText: 'Expanded',
            isButtons: true,
            isOpen: true,
            options: [
              {
                title: 'взрослые',
                value: 0
              },
              {
                title: 'дети',
                value: 0
              },
              {
                title: 'младенцы',
                value: 0,
                isBaby: true
              }
            ]
          })
        .page-form-elements__dropdown-column
          +dropdown({
            title: 'Dropdown',
            placeholder: 'Сколько гостей',
            helpText: 'Expanded',
            isButtons: true,
            isOpen: true,
            options: [
              {
                title: 'взрослые',
                value: 2
              },
              {
                title: 'дети',
                value: 1
              },
              {
                title: 'младенцы',
                value: 0,
                isBaby: true
              }
            ]
          })
      .page-form-elements__item.page-form-elements__item--left
        .page-form-elements__expand
          +expand({
            title: 'Expandable checkbox list'
          })
            +field-checkbox({
              checkboxes: [
                {
                  title: 'Завтрак',
                },
                {
                  title: 'Письменный стол',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Стул для кормления',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Кроватка',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Телевизор'
                },
                {
                  title: 'Шампунь'
                }
              ]
            })
        .page-form-elements__expand
          +expand({
            title: 'Expandable checkbox list',
            isOpen: true
          })
            +field-checkbox({
              checkboxes: [
                {
                  title: 'Завтрак',
                },
                {
                  title: 'Письменный стол',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Стул для кормления',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Кроватка',
                  attrs: {
                    checked: true
                  }
                },
                {
                  title: 'Телевизор'
                },
                {
                  title: 'Шампунь'
                }
              ]
            })
      .page-form-elements__item
        +field-checkbox({
          isRich: true,
          title: 'Rich Checkbox Buttons',
          checkboxes: [
            {
              title: 'Широкий коридор',
              text: 'Ширина коридоров в номере<br>не менее 91 см.'
            },
            {
              title: 'Помощник для инвалидов',
              text: 'На 1 этаже вас встретит специалист<br>и проводит до номера.'
            }
          ]
        })
      .page-form-elements__item
        .page-form-elements__title.page-form-elements__title--bullet Bullet list
        +bullet-list({
          list: [
            'Нельзя с питомцами',
            'Без вечеринок и мероприятий',
            'Время прибытия — после 13:00, а&nbsp;выезд&nbsp;до 12:00'
          ]
        })
      .page-form-elements__item.page-form-elements__item--left
        .page-form-elements__icon-text-list
          +icon-text-list({
            items: [
              {
                title: 'Комфорт',
                text: 'Шумопоглощающие стены',
                imageName: 'icon-text-list-emoticon.svg',
                mods: 'line',
                width: 40,
                height: 40
              },
              {
                title: 'Удобство',
                text: 'Окно в каждой из спален',
                imageName: 'icon-text-list-city.svg',
                mods: 'line',
                width: 36,
                height: 38
              }
            ]
          })
      .page-form-elements__item.page-form-elements__item--comment
        +comment({
          username: 'Мурад Сарафанов',
          date: '5 дней назад',
          avatar: 'comment-murad.jpg',
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
          likeBtn: {
            isActive: true,
            count: 12
          }
        })
      